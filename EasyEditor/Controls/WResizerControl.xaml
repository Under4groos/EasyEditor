<UserControl x:Class="EasyEditor.Controls.WResizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <UserControl.Resources>
        <SolidColorBrush x:Key="back_s" Color="Transparent"/>
    </UserControl.Resources>
    <Grid>
        <Border x:Name="t" Background="{StaticResource back_s}" VerticalAlignment="Top" Height="2"></Border>
        <Border x:Name="d" Background="{StaticResource back_s}" VerticalAlignment="Bottom" Height="2"></Border>
        <Border x:Name="r" Background="{StaticResource back_s}" VerticalAlignment="Stretch" Width="2" HorizontalAlignment="Right"></Border>
        <Border x:Name="l" Background="{StaticResource back_s}" VerticalAlignment="Stretch" Width="2" HorizontalAlignment="Left"></Border>     
        <Border x:Name="rd" Background="{StaticResource back_s}" VerticalAlignment="Bottom" Height="5" Width="5" HorizontalAlignment="Right"></Border>     
    </Grid>
</UserControl>
