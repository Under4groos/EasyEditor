<UserControl x:Class="EasyEditor.Controls.WindowControlButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyEditor.Controls"
             mc:Ignorable="d" 
             >
    
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border x:Name="min" Style="{StaticResource style_border_hover}">
                <Label Style="{StaticResource style_label_icon}" Content="&#xe73c;" Padding="1,1,0,0" ></Label>
            </Border>
            <Border x:Name="max" Style="{StaticResource style_border_hover}">
                <Label Style="{StaticResource style_label_icon}" FontSize="12" Content="&#xe739;" Padding="1,1,0,0" ></Label>
            </Border>
            <Border x:Name="close" Style="{StaticResource style_border_hover_clsoe}" CornerRadius="0,7,0,0">
                <Label Style="{StaticResource style_label_icon}" FontSize="15" Content="&#xe711;" Padding="1,1,0,0" ></Label>
            </Border>
        </StackPanel>        
    </Grid>
</UserControl>
